<?xml version="1.0" encoding="UTF-8"?>
<xs:schema
        xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
        xmlns:spdx="http://spdx.org/rdf/terms#"
        xmlns:xs="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://spdx.org/rdf/terms#"
        elementFormDefault="qualified"
        attributeFormDefault="qualified">

	<xs:annotation>
		<xs:documentation xml:lang="en">
            SPDX XML Schema (relevant parts for DCAT-AP-PLU)
            http://spdx.org/rdf/terms#
        </xs:documentation>
	</xs:annotation>

    <!-- imports -->
	<xs:import namespace="http://www.w3.org/1999/02/22-rdf-syntax-ns#" schemaLocation="rdf.xsd"/>

	<!-- types -->
	<xs:complexType name="Checksum">
		<xs:sequence>
			<xs:element name="Checksum">
				<xs:complexType>
					<xs:sequence>
						<!-- mandatory properties for spdx:Checksum-->
						<xs:element name="algorithm" type="rdf:Resource" minOccurs="1" maxOccurs="1"/>
						<xs:element name="checksumValue" type="rdf:TypedLiteral" minOccurs="1" maxOccurs="1"/>
					</xs:sequence>
					<xs:attribute ref="rdf:about"/>
					<xs:attribute ref="rdf:nodeID"/>
				</xs:complexType>
			</xs:element>
		</xs:sequence>
	</xs:complexType>

	<!-- elements -->
	<xs:element name="checksum" type="spdx:Checksum"/>
</xs:schema>
