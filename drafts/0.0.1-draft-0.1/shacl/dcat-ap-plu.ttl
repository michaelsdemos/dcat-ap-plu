:Dataset_Shape
    a sh:NodeShape ;
    sh:name "Dataset"@en ;
    # mandatory
    sh:property [
        sh:class vcard:Organization ;
        sh:path dcat:contactPoint ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ], [
        sh:minCount 1 ;
        sh:nodeKind sh:Literal ;
        sh:path dct:description ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ], [
        sh:nodeKind sh:Literal ;
        sh:path dct:identifier ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ], [
        sh:class foaf:Agent ;
        sh:path dct:publisher ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ], [
        sh:class dct:Location ;
        sh:path dct:spatial ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ], [
        sh:nodeKind sh:Literal ;
        sh:path dct:title ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ], [
        sh:nodeKind sh:Literal ;
        sh:path plu:planState ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ], [
        sh:nodeKind sh:Literal ;
        sh:path plu:procedureState ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    # recommended
    sh:property [
        sh:class adms:Identifier ;
        sh:path adms:identifier ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:class dcat:Distribution ;
        sh:path dcat:distribution ;
        sh:minCount 0 ;
    ], [
        sh:nodeKind sh:Literal ;
        sh:path plu:planType ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:nodeKind sh:Literal ;
        sh:path plu:planTypeFine ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:nodeKind sh:Literal ;
        sh:path plu:procedureType ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:class plu:ProcessStep ;
        sh:path plu:processStep ;
        sh:minCount 0 ;
    ] ;
    # optional
    sh:property [
        sh:class foaf:Agent ;
        sh:path dcatde:maintainer ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:class foaf:Agent ;
        sh:path dct:contributor ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:shape :DateOrDateTimeDataType_Shape ;
        sh:path dct:issued ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:shape :DateOrDateTimeDataType_Shape ;
        sh:path dct:modified ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:nodeKind sh:BlankNodeOrIRI ;
        sh:path dct:relation ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:class dct:PeriodOfTime ;
        sh:path plu:developmentFreezePeriod ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:nodeKind sh:Literal ;
        sh:path plu:notification ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ], [
        sh:nodeKind sh:Literal ;
        sh:path plu:procedureStartDate ;
        sh:minCount 0 ;
        sh:maxCount 1 ;
    ] ;
    sh:targetClass dcat:Dataset .

:DateOrDateTimeDataType_Shape
    a sh:NodeShape ;
    rdfs:comment "Date time date disjunction shape checks that a datatype property receives a date or a dateTime literal" ;
    rdfs:label "Date time date disjunction" ;
    sh:message "The values must be data typed as either xsd:date or xsd:dateTime" ;
    sh:or ([
            sh:datatype xsd:date
        ]
        [
            sh:datatype xsd:dateTime
        ]
    ) .

:DcatResource_Shape
    a sh:NodeShape ;
    rdfs:comment "the union of Catalog, Dataset and DataService" ;
    rdfs:label "dcat:Resource" ;
    sh:message "The node is either a Catalog, Dataset or a DataService" ;
    sh:or ([
            sh:class dcat:Catalog
        ]
        [
            sh:class dcat:Dataset
        ]
        [
            sh:class dcat:DataService
        ]
    ) .

